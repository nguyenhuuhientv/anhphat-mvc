        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Chi tiết tiếng anh</a></p>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.detail_en, new { @class = "form-control col-md-12", cols = 35, @rows = 3 })
                @Html.ValidationMessageFor(model => model.detail_en, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Nhóm sản phẩm</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.group_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.group_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Product")
</div>
