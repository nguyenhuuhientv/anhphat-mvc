@model AnhPhatMVC.Context.product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Tao mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="control-label col-md-2"><a>Tên tiếng việt</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.caption_vn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.caption_vn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Tên tiếng anh</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.caption_en, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.caption_en, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Mô tả tiếng việt</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.describe_vn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.describe_vn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Mô tả tiếng anh</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.describe_en, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.describe_en, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Ảnh</a></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2"><a>Chi tiết tiếng việt</a></p>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.detail_vn, new { @class = "form-control col-md-12", cols = 35, @rows = 3 })
                @Html.ValidationMessageFor(model => model.detail_vn, "", new { @class = "text-danger" })
