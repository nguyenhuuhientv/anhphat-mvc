@model IEnumerable<AnhPhatMVC.Context.group_product>

@{
    ViewBag.Title = "Group";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Nhóm sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">

    <thead>
        <tr>
            <th>
                <a>Tên nhóm tiếng việt</a>
            </th>
            <th>
                <a>Tên nhóm tiếng anh</a>
            </th>
            <th>
                <a>Ưu tiên</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody role="alert" aria-live="polite" aria-relevant="all">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.caption_vn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caption_en)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderby)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
