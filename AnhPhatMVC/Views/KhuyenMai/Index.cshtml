@model dynamic
@{
    ViewBag.Title = @AnhPhatMVC.Resources.Main.KHUYENMAI;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="@Url.RouteUrl("TrangChu")"><i class="fa fa-home"></i> @AnhPhatMVC.Resources.Main.TRANGCHU</a></li>
    <li class="active">@AnhPhatMVC.Resources.Main.KHUYENMAI</li>
</ol>

<div class="row content news">
    <div class="col-md-12">
        @if (Model.News != null && Model.News.Count > 0)
        {
            foreach (var item in Model.News)
            {
                <div class="news-right-item col-md-6">
                    <a href="/khuyen-mai/@item.link" class="item col-md-4 col-xs-12">
                        <img src="@item.image" class="image-responsive" />
                    </a>
                    <div class="description col-md-8">
                        <h3 class="col-md-12 text-left"><a href="/khuyen-mai/@item.link">@item.caption</a></h3>
                        <div class="col-md-12 text-left info">
                            @item.describe
                        </div>
                    </div>
                </div>
            }
        }
        <div class="clearfix"></div>
    </div>
</div>

