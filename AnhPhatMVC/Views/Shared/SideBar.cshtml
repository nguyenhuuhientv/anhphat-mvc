
@model dynamic
    <div class="panel panel-default panel-categories">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#subjects" aria-expanded="false">
                <i class="fa fa-bars"></i> @(AnhPhatMVC.Resources.Main.DANHMUC)
            </a>
        </h4>
    </div>
    <div id="subjects" class="panel-collapse collapse in" aria-expanded="false">
        <div class="panel-body">
            <ul class="list-item">
                @foreach (var item in Model.Groups)
                {
                    <li class="item">
                        <a href="#"><i class="fa fa-angle-left"></i>@item.caption</a>
                    </li>
                }
                
           
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
