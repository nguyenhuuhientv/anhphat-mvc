@model IEnumerable<AnhPhatMVC.Context.service>

@{
    ViewBag.Title = "Service";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Dịch vụ</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
    <thead>
        <tr>
            <th>
                <a> Tên DV tiếng việt </a>
            </th>
            <th>
                <a> Tên DV tiếng anh </a>
            </th>
            <th>
                <a>Mô tả tiếng việt</a>
            </th>
            <th>
               <a>Mô tả tiếng anh</a>
            </th>
            <th>
               <a>Chi tiết tiếng việt</a>
            </th>
            <th>
               <a>Chi tiết tiếng anh</a>
            </th>
            <th>
               <a>Ảnh</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody role="alert" aria-live="polite" aria-relevant="all">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.caption_vn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caption_en)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describe_vn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describe_en)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detail_vn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detail_en)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
