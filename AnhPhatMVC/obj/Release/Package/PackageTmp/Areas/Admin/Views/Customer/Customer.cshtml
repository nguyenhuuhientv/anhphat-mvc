@model IEnumerable<AnhPhatMVC.Context.customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Customer</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">

    <thead>
        <tr>
            <th>
               <a>Họ tên</a>
            </th>
            <th>
                <a>Ảnh</a>
            </th>
            <th>
               <a>Mô tả tiếng việt</a>
            </th>
            <th>
                <a>Mô tả tiếng anh</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody role="alert" aria-live="polite" aria-relevant="all">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describe_vn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describe_en)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
