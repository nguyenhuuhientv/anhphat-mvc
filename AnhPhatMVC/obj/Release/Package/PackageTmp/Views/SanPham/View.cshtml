@model dynamic
@{
    ViewBag.Title = Model.caption;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="@Url.RouteUrl("TrangChu")"><i class="fa fa-home"></i> @AnhPhatMVC.Resources.Main.TRANGCHU</a></li>
    <li><a href="@Url.RouteUrl("SanPham")">@AnhPhatMVC.Resources.Main.SANPHAM</a></li>
    <li><a href="/danh-sach-san-pham/@Model.group_link">@Model.group_caption</a></li>
    <li class="active">@Model.caption</li>
</ol>

<div class="row content products">
    <div class="col-md-12">
        <h4>@Model.caption</h4>
        <p>@Model.group_caption</p>
        <div class="image-intro text-center">
            <img src="@Model.image" />
        </div>
        <div class="detail">
            @Html.Raw(Model.detail)
        </div>
    </div>
</div>

